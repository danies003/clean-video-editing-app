{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "_comment": "Full backend deployment with all API endpoints",
    "startCommand": "python main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
